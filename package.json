{
  "name": "prog-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "prepare": "husky install",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "docker:build": "DOCKER_BUILDKIT=0 COMPOSE_DOCKER_CLI_BUILD=0 docker-compose build",
    "docker:up": "DOCKER_BUILDKIT=0 COMPOSE_DOCKER_CLI_BUILD=0 docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all --remove-orphans",
    "docker:nuke": "docker system prune -a --volumes",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:clean": "docker compose -f docker-compose.dev.yml down -v --rmi all --remove-orphans",
    "docker:staging:build": "DOCKER_BUILDKIT=0 COMPOSE_DOCKER_CLI_BUILD=0 docker-compose -f docker-compose.staging.yml build",
    "docker:staging:up": "DOCKER_BUILDKIT=0 COMPOSE_DOCKER_CLI_BUILD=0 docker-compose -f docker-compose.staging.yml up -d",
    "docker:staging:down": "docker-compose -f docker-compose.staging.yml down",
    "docker:staging:clean": "docker-compose -f docker-compose.staging.yml down -v --rmi all --remove-orphans",
    "mapdb": "ssh -i ~/Downloads/prog-hub-key.pem -L 3307:localhost:3306 ec2-user@34.202.230.165 -N",
    "copy-db": "docker exec next_app_dev node /app/copy-db.js",
    "logs": "docker logs --tail 50 next_app_prod",
    "logs:staging": "docker logs --tail 50 next_app_staging"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.913.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@prisma/client": "^6.17.1",
    "@types/express": "^5.0.3",
    "discord.js": "^14.23.2",
    "express": "^5.1.0",
    "mysql2": "^3.15.2",
    "next": "^15.5.9",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
