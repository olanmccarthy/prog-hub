FROM node:20-alpine
WORKDIR /app

# Install fonts and fontconfig for image generation
RUN apk add --no-cache \
    fontconfig \
    ttf-dejavu \
    font-noto \
    font-noto-cjk \
    font-noto-emoji

# Copy package manifests
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose dev port
EXPOSE 3000

# Run in dev mode (hot reload)
CMD ["npm", "run", "dev"]
